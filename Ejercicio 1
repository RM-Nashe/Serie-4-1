#include <stdio.h>

/*Escribir un programa que calcule los factoriales de los primeros n números naturales usando una
función llamada FACTORIAL.*/

int factorial(int n);

int main(){

    long long int x;

    printf("Ingrese el numero del cual se obtendra el factorial: ");
    scanf("%d",&x);

    printf("El factorial de %d es: %d",x ,factorial(x));

    return 0;

}
int factorial(int n){

	long long int factorial=1, contador=1;

	while (contador<=n){

        factorial=factorial*contador;
        contador++;
	}
    return(factorial);
}
